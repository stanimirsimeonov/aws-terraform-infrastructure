# ----------------------------------------------------------------------------------------------------------------------
# Create the general key used to encrypt the cluster
# ----------------------------------------------------------------------------------------------------------------------

resource "aws_kms_key" "main" {
  description             = "Used to Crypt whole the cluster"
  deletion_window_in_days = 7
}

# ----------------------------------------------------------------------------------------------------------------------

# ----------------------------------------------------------------------------------------------------------------------
resource "aws_kms_alias" "main" {
  name          = "alias/${local.project.slug}"
  target_key_id = aws_kms_key.main.id
}

